#Homework20220317.R
# Problem 1
outcomes <- c("win", "lose")
counter <- 0
for(k in 1:1000){
  
  budget <- 100
  bet <- 1
  
  while(budget > 0) {
    counter <- counter + 1
    
    biased_coin <- sample(outcomes, size = 1, prob = c(0.486, 0.514))
    
    if(biased_coin == "win"){
      budget <- budget+bet
      bet <- 1
    }
    else{
      budget <- budget-bet
      
      if(bet*2 > budget){
        bet <- budget
      }
      else{
        bet <- bet*2
      }
    }
  }
}
average <- counter/1000

